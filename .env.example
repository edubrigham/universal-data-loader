# Universal Data Loader Microservice Configuration
# Copy this file to .env and configure for your application

# ==============================================
# MICROSERVICE CONNECTION
# ==============================================

# URL of the Universal Data Loader microservice
UNIVERSAL_LOADER_URL=http://localhost:8000

# API timeout in seconds (for long document processing)
UNIVERSAL_LOADER_TIMEOUT=300

# Retry configuration
UNIVERSAL_LOADER_MAX_RETRIES=3
UNIVERSAL_LOADER_RETRY_DELAY=2

# ==============================================
# DOCUMENT PROCESSING CONFIGURATION
# ==============================================

# Default output format (documents, json, text, elements)
DEFAULT_OUTPUT_FORMAT=documents

# Chunking strategy (null for no chunking, basic, by_title, by_page)
DEFAULT_CHUNKING_STRATEGY=null

# Chunk size in characters (when chunking is enabled)
DEFAULT_CHUNK_SIZE=800

# Overlap between chunks in characters
DEFAULT_CHUNK_OVERLAP=100

# Include metadata in output (true/false)
DEFAULT_INCLUDE_METADATA=true

# Minimum text length to include
DEFAULT_MIN_TEXT_LENGTH=50

# Remove headers and footers (true/false)
DEFAULT_REMOVE_HEADERS_FOOTERS=true

# OCR languages (comma-separated: eng,fra,deu,spa)
DEFAULT_OCR_LANGUAGES=eng

# ==============================================
# BATCH PROCESSING CONFIGURATION
# ==============================================

# Maximum parallel workers for batch processing
DEFAULT_MAX_WORKERS=3

# Continue processing on individual failures (true/false)
DEFAULT_CONTINUE_ON_ERROR=true

# Separate output files by source (true/false)
DEFAULT_SEPARATE_BY_SOURCE=true

# Create merged output file with all sources (true/false)
DEFAULT_MERGE_ALL=false

# ==============================================
# APPLICATION SPECIFIC SETTINGS
# ==============================================

# Cache processed documents locally (true/false)
ENABLE_LOCAL_CACHE=false

# Local cache directory
LOCAL_CACHE_DIR=./cache/documents

# Cache expiration in hours
CACHE_EXPIRATION_HOURS=24

# Automatic cleanup of completed jobs (true/false)
AUTO_CLEANUP_JOBS=true

# ==============================================
# LOGGING AND MONITORING
# ==============================================

# Enable verbose logging (true/false)
ENABLE_VERBOSE_LOGGING=false

# Log file path (optional)
LOG_FILE_PATH=./logs/universal_loader.log

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=60

# ==============================================
# ADVANCED CONFIGURATION
# ==============================================

# Custom headers for API requests (JSON format)
CUSTOM_HEADERS={}

# Rate limiting (requests per minute)
RATE_LIMIT=100

# SSL verification (true/false)
SSL_VERIFY=true

# ==============================================
# EXAMPLE CONFIGURATIONS
# ==============================================

