# Universal Data Loader Microservice Environment Configuration
# Copy this file to .env for custom configuration

# ==============================================
# SERVER CONFIGURATION
# ==============================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Environment mode (development, production)
ENVIRONMENT=development

# Enable debug mode (true/false)
DEBUG=false

# ==============================================
# PROCESSING CONFIGURATION
# ==============================================

# Maximum file upload size in MB
MAX_FILE_SIZE=100

# Maximum parallel workers for batch processing
MAX_WORKERS=3

# Job timeout in seconds
JOB_TIMEOUT=300

# OCR language support (comma-separated)
OCR_LANGUAGES=eng

# ==============================================
# STORAGE CONFIGURATION
# ==============================================

# Temporary upload directory (auto-created)
UPLOAD_DIR=/tmp/uploads

# Output directory for processed files (auto-created)
OUTPUT_DIR=/tmp/outputs

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Allowed CORS origins (comma-separated, * for all)
ALLOWED_ORIGINS=*

# Optional API key for authentication
API_KEY=

# Rate limiting (requests per time period)
RATE_LIMIT=100/minute

# ==============================================
# MONITORING CONFIGURATION
# ==============================================

# Enable metrics collection (true/false)
ENABLE_METRICS=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==============================================
# PRODUCTION EXAMPLES
# ==============================================

# Production settings (uncomment and modify):
# ENVIRONMENT=production
# DEBUG=false
# ALLOWED_ORIGINS=https://your-app.com,https://api.your-app.com
# API_KEY=your-secure-api-key-here
# MAX_WORKERS=5
# RATE_LIMIT=200/minute
# LOG_LEVEL=WARNING